{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {}
  },
  "include": [
    "source/**/*.ts"
  ]
}
