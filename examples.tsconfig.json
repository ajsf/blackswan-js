{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2015",
    "module": "ES6",
    "sourceMap": true,
    "outDir": "./examples/compiled",
    "rootDirs": "./",
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "Node",
    "baseUrl": "../",
    "paths": {}
  },
  "include": [
    "examples/**/*.ts"
  ]
}
